<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="500" prefWidth="600">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label fx:id="mainTitle" text="Commande en préparation..." style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label fx:id="infoStatus" style="-fx-font-size: 16px;"/>

            <ImageView fx:id="logoImage" fitWidth="200" fitHeight="200" preserveRatio="true"/>

            <Button fx:id="boutonFin" text="Retour à l'accueil" visible="false" onAction="#onBoutonFinClick"
                    style="-fx-font-size: 16px; -fx-padding: 10 20 10 20;"/>
        </VBox>
    </center>

</BorderPane>
